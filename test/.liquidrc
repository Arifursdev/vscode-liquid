{
  "engine": "shopify",
  "files": {
    "locales": "./theme/locales/en.default.json",
    "settings": "./theme/config/settings_schema.json",
    "sections": [
      "./sections/*"
    ],
    "snippets": [
      "./toggle/*.liquid"
    ]
  },
  "format": {
    "ignore": [
      "./completions/*",
      "./ignores/ignore.liquid",
      "./syntax/*"
    ],
    "wrap": 0,
    "crlf": false,
    "indentSize": 2,
    "preserveLine": 2,
    "endNewline": true,
    "liquid": {
      "commentIndent": true,
      "commentNewline": true,
      "forceArgument": 0,
      "forceFilter": 3,
      "delimiterPlacement": "consistent",
      "delimiterTrims": "preserve",
      "ignoreTagList": [
        "capture"
      ],
      "lineBreakSeparator": "after",
      "normalizeSpacing": true,
      "preserveComment": false,
      "quoteConvert": "single"
    },
    "markup": {
      "forceAttribute": 3,
      "ignoreJS": false,
      "ignoreJSON": false,
      "ignoreCSS": false,
      "delimiterTerminus": "adapt",
      "lineBreakValue": "align"
    },
    "json": {
      "braceAllman": true
    }
  }
}