{
  "engine": "shopify",
  "files": {
    "data": [
      "./theme/config/settings_schema.json"
    ],
    "includes": [
      "./sections/*.liquid"
    ]
  },
  "format": {
    "ignore": [
      "./completions/*",
      "./ignores/ignore.liquid",
      "./syntax/*"
    ],
    "wrap": 100,
    "crlf": false,
    "indentSize": 2,
    "preserveLine": 2,
    "endNewline": true,
    "liquid": {
      "commentIndent": true,
      "commentNewline": true,
      "delimiterPlacement": "inline",
      "delimiterTrims": "preserve",
      "ignoreTagList": [
        "capture"
      ],
      "lineBreakSeparator": "before",
      "normalizeSpacing": true,
      "preserveComment": false,
      "quoteConvert": "single"
    },
    "markup": {},
    "json": {
      "braceAllman": true
    }
  }
}