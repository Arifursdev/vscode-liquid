{
  "engine": "shopify",
  "files": {
    "locales": "./theme/locales/en.default.json",
    "settings": "./theme/config/settings_schema.json",
    "sections": [
      "./sections/*"
    ],
    "snippets": [
      "./toggle/*.liquid"
    ]
  },
  "format": {
    "ignore": [
      "./completions/*",
      "./ignores/ignore.liquid",
      "./syntax/*"
    ],
    "wrap": 100,
    "crlf": false,
    "indentSize": 2,
    "preserveLine": 2,
    "endNewline": true,
    "liquid": {
      "commentIndent": true,
      "commentNewline": true,
      "delimiterPlacement": "force",
      "delimiterTrims": "preserve",
      "ignoreTagList": [
        "capture"
      ],
      "lineBreakSeparator": "before",
      "normalizeSpacing": true,
      "preserveComment": false,
      "quoteConvert": "single"
    },
    "markup": {
      "ignoreJS": true,
      "ignoreJSON": true,
      "ignoreCSS": true
    },
    "json": {
      "braceAllman": true
    }
  }
}