{
  "engine": "shopify",
  "files": {
    "locales": "./theme/locales/en.default.json",
    "settings": "./theme/config/settings_schema.json",
    "sections": [
      "./sections/*"
    ],
    "snippets": [
      "./toggle/*.liquid"
    ]
  },
  "format": {
    "ignore": [
      "./completions/*",
      "./ignores/ignore.liquid",
      "./syntax/**"
    ],
    "wrap": 100,
    "crlf": false,
    "indentSize": 2,
    "preserveLine": 2,
    "endNewline": true,
    "liquid": {
      "commentIndent": true,
      "commentNewline": false,
      "forceArgument": 0,
      "forceFilter": 0,
      "delimiterPlacement": "preserve",
      "delimiterTrims": "never",
      "dedentTagList": [],
      "ignoreTagList": [],
      "lineBreakSeparator": "before",
      "normalizeSpacing": true,
      "preserveComment": false,
      "quoteConvert": "single"
    },
    "markup": {
      "forceAttribute": 2,
      "forceIndent": true,
      "ignoreJS": true,
      "ignoreJSON": false,
      "ignoreCSS": false,
      "delimiterTerminus": "force",
      "lineBreakValue": "preserve"
    },
    "json": {
      "bracePadding": false,
      "braceAllman": true,
      "objectIndent": "indent",
      "arrayFormat": "indent"
    }
  }
}