---
author: "John Smith"
layout: "foobar"
permalink: "/"
layout: default
foo:
 - bar: test
 - foo: bar
 - jekyll: frontmatter
---

<html lang="{{ page.lang | default: site.lang | default: test }}">

  <head>
    <meta charset="utf-8">
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta content="width=device-width, initial-scale=1" name="viewport">

    {% seo %}

    <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed:400,700" rel="stylesheet">
    <link href="{{ '/assets/stylesheet.css' | relative_url }}" rel="stylesheet">
    <script src="{{ '/assets/bundle.js' | relative_url }}" defer></script>

    {% if site.google_analytics and jekyll.environment == 'production' %}
      {% include components/analytics.html %}
    {% endif %}

  </head>

  <body id="home">

    {% include components/icons.html %}

    <aside aria-hidden="true" class="drawer-panel drawer-left" data-turbolinks-permanent id="drawer">
      {% include layout/sidebar.html %}
    </aside>

    <div class="wrapper">

      <header class="header container-fluid" data-turbolinks-permanent id="header">
        {% include layout/header.html %}
      </header>

      <main class="pb-4">
        {% include layout/main.html %}
      </main>

      <footer class="footer container-fluid bg-night" data-turbolinks-permanent id="footer">
        {% include layout/footer.html %}
      </footer>

    </div>

    <div class="drawer-overlay" data-turbolinks-permanent id="overlay"></div>

  </body>

</html>

<nav class="header__navigation col">
  <ul>
    {% for link in site.data.menu %}
      <li class="{% if link.children %}nested {% endif %}{% if url == link.url %}current{% endif %}">
        {% if link.children %}
          <ul class="first-level">
            {% for child in link.children %}
              <li>
                {% if child.children %}
                  <ul class="second-level">
                    {% for child in child.children %}
                      <li>
                        <a href="{{ child.url | absolute_url }}">
                          {{ child.title }}
                        </a>
                      </li>
                    {% endfor %}
                  </ul>
                {% endif %}
                <a href="{{ child.url | absolute_url }}">
                  {{ child.title }}
                </a>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </li>
    {% endfor %}
  </ul>
</nav>
