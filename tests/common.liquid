{%- comment -%}
  Common Liquid
{%- endcomment -%}

{% style  %}
  .foo {
    position: relative;
  }
  .bar {
    height: 50px;
    width: 100%;
  }
{% endstyle %}

{%- for foo in collection[bar].products -%}
  {{ foo.title }}
{%- endfor -%}

{% for tag in collection.all_tags %}
  {% if current_tags contains tag %}
    <li class="active">
      {{ tag | link_to_remove_tag: tag }}
    </li>
  {% else %}
    <li>
      {{ tag | link_to_add_tag: tag }}
    </li>
  {% endif %}
{% endfor %}

{%- if foo == true or bar == false  -%}
    {{ hello }}
  {% else %}
    {{ world }}
{%- endif -%}

{%- case variable -%}

  {%- when condition -%}
    {{ foo }}
  {%- else -%}
    {{ bar | append: 'foo' }}

{%- endcase -%}

{%- unless condition -%}
  {{ foo }}
{%- endunless -%}


