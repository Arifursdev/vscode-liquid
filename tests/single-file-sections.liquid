{%- comment -%}
  Single File Sections
{%- endcomment -%}

<config>
{
  config: {
    sticky: {{ section.settings.sticky }},
    icons: {{ section.settings.use_icons }},
  },
  boolean: false,
  boolean: true,
  logo: {
    align: {{ section.settings.logo_align }},
    src: {{ settings.logo | json }},
    alt: {{ section.settings.logo.alt | default: shop.name | json }}
  },
  main_menu: [
    {%- for link in linklists[section.settings.menu].links -%}
      {
        "title": {{ link.title | json }},
        "url": {{ link.url | json }},
        "sub_menu": [
          {%- if link.links != blank -%}
            {%- for sub in link.links -%}
              {
                "title": {{ sub.title | json }},
                "url": {{ sub.url | json }}
              }
            {%- unless forloop.last -%},{%- endunless -%}
            {%- endfor -%}
          {%- endif -%}
        ]
      }
    {%- unless forloop.last -%},{%- endunless -%}
    {%- endfor -%}
  ]

}
</config>

<template>

  {% for tag in collection.all_tags %}
    {% if current_tags contains tag %}
      <li class="active">
        {{ tag | link_to_remove_tag: tag }}
      </li>
    {% else %}
      <li>
        {{ tag | link_to_add_tag: tag }}
      </li>
    {% endif %}
  {% endfor %}

</template>

<style>

  .foo {
    position: relative;
  }

  .bar {
    height: 50px;
    width: 100%;
  }

</style>

<script>

  /* comment */
  const bar = "string"
  const foo = true

