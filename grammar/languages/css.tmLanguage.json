{
  "name": "Liquid CSS",
  "scopeName": "source.css.liquid",
  "fileTypes": ["liquid"],
  "injectionSelector": "L:source.css",
  "injections": {
    "L:string - (string.quoted.*.css)": {
      "patterns": [
        { "include": "source.liquid#tags" },
        { "include": "source.liquid#output" }
      ]
    }
  },
  "patterns": [
    { "include": "source.liquid#comments" },
    { "include": "source.liquid#tags" },
    { "include": "source.liquid#output" },
    { "include": "source.css" }
  ]
}
