{
  "name": "Liquid JSON",
  "scopeName": "source.json.liquid",
  "injectionSelector": "L:source.json -string -meta",
  "injections": {
    "L:string": {
      "patterns": [
        { "include": "source.liquid#tags" },
        { "include": "source.liquid#output" }
      ]
    }
  },
  "patterns": [
    { "include": "source.liquid#comment-inline" },
    { "include": "source.liquid#comment-block" },
    { "include": "source.liquid#tags" },
    { "include": "source.liquid#output" },
    { "include": "source.json" }
  ]
}
