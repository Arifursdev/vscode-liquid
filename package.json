{
  "name": "shopify-liquid",
  "displayName": "Liquid",
  "description": "Syntax highlighting, formatting and snippet support for the liquid template language. Supports both Jekyll and Shopify variations.",
  "publisher": "sissel",
  "icon": "images/logo.png",
  "author": "Nikolas Savvidis <nicos@gmx.com>",
  "version": "2.1.3",
  "keywords": [
    "liquid",
    "shopify",
    "jekyll",
    "language",
    "formatting"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/panoply/vscode-liquid.git"
  },
  "bugs": {
    "url": "https://github.com/panoply/vscode-liquid/issues"
  },
  "engines": {
    "vscode": "^1.30.0"
  },
  "categories": [
    "Formatters",
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onCommand:liquid.liquidrc"
  ],
  "main": "./extension/index",
  "contributes": {
    "commands": [
      {
        "command": "liquid.disableFormatting",
        "title": "Liquid: Disable Formatting"
      },
      {
        "command": "liquid.enableFormatting",
        "title": "Liquid: Enable Formatting"
      },
      {
        "command": "liquid.toggleOutput",
        "title": "Liquid: Toggle Output"
      },
      {
        "command": "liquid.formatDocument",
        "title": "Liquid: Format Document"
      },
      {
        "command": "liquid.formatSelection",
        "title": "Liquid: Format Selection"
      },
      {
        "command": "liquid.liquidrc",
        "title": "Liquid: Generate a .liquidrc rule file"
      }
    ],
    "keybindings": [
      {
        "command": "liquid.formatDocument",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l",
        "when": "editorTextFocus"
      }
    ],
    "languages": [
      {
        "id": "liquid",
        "configuration": "./src/language/liquid.configuration.json",
        "aliases": [
          "Liquid"
        ]
      },
      {
        "id": "html",
        "extensions": [
          ".liquid",
          ".jekyll",
          ".jkyl"
        ]
      },
      {
        "id": "javascript",
        "extensions": [
          ".js.liquid",
          ".ts.liquid"
        ]
      },
      {
        "id": "css",
        "extensions": [
          ".css.liquid"
        ]
      },
      {
        "id": "scss",
        "extensions": [
          ".scss.liquid",
          ".sass.liquid"
        ]
      },
      {
        "id": "json",
        "filenames": [
          ".liquid",
          ".liquidrc"
        ]
      }
    ],
    "grammars": [
      {
        "language": "liquid",
        "scopeName": "source.liquid",
        "path": "./src/syntax/liquid.tmLanguage.json",
        "injectTo": [
          "text.html.markdown",
          "text.html",
          "source.js",
          "source.js.jsx",
          "source.jsx",
          "source.ts",
          "source.tsx",
          "source.css",
          "source.css.scss"
        ]
      },
      {
        "scopeName": "js.literal.liquid",
        "path": "./src/syntax/liquid-literal.injection.json",
        "injectTo": [
          "source.js",
          "source.js.jsx",
          "source.jsx",
          "source.ts",
          "source.tsx"
        ],
        "embeddedLanguages": {
          "source.liquid": "liquid",
          "meta.embedded.block.html": "html",
          "meta.template.expression.ts": "typescript"
        }
      }
    ],
    "snippets": [
      {
        "language": "html",
        "path": "./src/snippets/snippets.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Liquid Language configuration",
      "properties": {
        "liquid.format": {
          "type": "boolean",
          "default": true,
          "description": "Whether to enable/disable Liquid formatting."
        },
        "liquid.rules": {
          "type": "object",
          "description": "Format code style ruleset settings.",
          "default": {
            "ignore": [
              {
                "type": "liquid",
                "begin": "comment",
                "end": "endcomment"
              },
              {
                "type": "html",
                "begin": "script",
                "end": "script"
              },
              {
                "type": "html",
                "begin": "style",
                "end": "style"
              }
            ],
            "html": {
              "correct": false,
              "force_attribute": false,
              "braces": false,
              "preserve": 2,
              "unformatted": false
            },
            "js": {
              "preserve": 1,
              "method_chain": 0,
              "quote_convert": "none",
              "format_array": "indent",
              "format_object": "indent",
              "braces": false,
              "no_semicolon": false,
              "brace_block": true
            },
            "scss": {
              "css_insert_lines": true,
              "preserve": 2,
              "braces": false,
              "brace_block": true
            },
            "css": {
              "css_insert_lines": true,
              "preserve": 2,
              "braces": false,
              "brace_block": true
            },
            "json": {
              "preserve": 0,
              "braces": false,
              "brace_block": true,
              "no_semicolon": true
            }
          }
        },
        "liquid.formatIgnore": {
          "deprecationMessage": "DEPRECATED!\nDefine ignore tags in the \"liquid.rules\": { \"ignore\": [] } property ruleset."
        },
        "liquid.beautify": {
          "deprecationMessage": "DEPRECATED!\nDefine beautification formatting rules using a .liquidrc file or use the \"liquid.rules\" workspace setting."
        }
      }
    }
  },
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.6",
    "@types/node": "^12.0.10",
    "async-regex-replace": "^3.0.0",
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "prettier": "^1.17.0",
    "prettier-eslint": "^9.0.0",
    "rollup": "^1.16.4",
    "rollup-plugin-babel": "^4.3.3",
    "vscode": "^1.1.35"
  },
  "dependencies": {
    "align-yaml": "^0.1.8",
    "assign-deep": "^1.0.1",
    "chalk": "^2.4.2",
    "path": "^0.12.7",
    "prettydiff": "^101.1.7"
  }
}
