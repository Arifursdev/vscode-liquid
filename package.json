{
  "name": "shopify-liquid",
  "displayName": "Shopify Liquid",
  "description": "Language syntax, formatting and snippet support for the shopify liquid template language. Supports section tags like schema, javascript, stylesheet and more.",
  "publisher": "sissel",
  "icon": "images/logo.png",
  "author": "Nikolas Savvidis <nicos@gmx.com>",
  "version": "1.3.2",
  "keywords": [
    "liquid",
    "shopify",
    "language",
    "formatting"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/panoply/vscode-shopify-liquid.git"
  },
  "bugs": {
    "url": "https://github.com/panoply/vscode-shopify-liquid/issues"
  },
  "engines": {
    "vscode": "^1.30.0"
  },
  "categories": [
    "Formatters",
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:liquid",
    "onLanguage:html",
    "onCommand:liquid.enableFormatting",
    "onCommand:liquid.formatDocument",
    "onCommand:liquid.formatSelection"
  ],
  "main": "./extension/index",
  "contributes": {
    "commands": [
      {
        "command": "liquid.disableFormatting",
        "title": "Liquid: Disable Formatting"
      },
      {
        "command": "liquid.enableFormatting",
        "title": "Liquid: Enable Formatting"
      },
      {
        "command": "liquid.formatDocument",
        "title": "Liquid: Format File"
      },
      {
        "command": "liquid.formatSelection",
        "title": "Liquid: Format Selection"
      }
    ],
    "languages": [
      {
        "id": "liquid",
        "aliases": [
          "Shopify Liquid (HTML)"
        ],
        "extensions": [
          ".liquid"
        ],
        "configuration": "./src/language/liquid.configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "html",
        "scopeName": "source.liquid",
        "path": "./src/syntax/liquid.tmLanguage.json",
        "embeddedLanguages": {
          "source.json": "json",
          "source.css": "css",
          "source.css.scss": "scss",
          "source.js": "javascript",
          "source.ts": "typescript"
        }
      },
      {
        "language": "liquid",
        "scopeName": "source.liquid",
        "path": "./src/syntax/liquid.tmLanguage.json",
        "embeddedLanguages": {
          "source.json": "json",
          "source.css": "css",
          "source.css.scss": "scss",
          "source.js": "javascript",
          "source.ts": "typescript"
        }
      }
    ],
    "snippets": [
      {
        "language": "liquid",
        "path": "./src/snippets/snippets.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Liquid Language configuration",
      "properties": {
        "liquid.format": {
          "type": "boolean",
          "default": true,
          "description": "Whether to enable/disable Liquid formatting."
        },
        "liquid.beautify": {
          "type": "object",
          "description": "Format settings for liquid html and shopify stylesheet, javascript and schema tags.",
          "default": {
            "html": {
              "force_attribute": false,
              "preserve": 2
            },
            "javascript": {
              "preserve": 1,
              "method_chain": 0,
              "quote_convert": "none",
              "format_array": "indent",
              "format_object": "indent"
            },
            "stylesheet": {
              "css_insert_lines": true,
              "preserve": 2
            },
            "schema": {
              "format_array": "indent"
            }
          }
        }
      }
    }
  },
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.11.0",
    "eslint": "^5.14.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-html": "^5.0.3",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "prettier": "^1.16.4",
    "prettier-eslint": "^8.8.2",
    "rollup": "^1.6.0",
    "rollup-plugin-babel": "^4.3.2",
    "vscode": "^1.1.30"
  },
  "dependencies": {
    "path": "^0.12.7",
    "prettydiff": "^100.2.6"
  }
}
