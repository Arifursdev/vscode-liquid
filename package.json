{
  "name": "shopify-liquid",
  "displayName": "Liquid",
  "description": "Syntax highlighting, formatting and snippet support for the liquid template language. Supports both Jekyll and Shopify variations.",
  "publisher": "sissel",
  "icon": "images/logo.png",
  "author": "Nikolas Savvidis <nicos@gmx.com>",
  "version": "2.4.0",
  "keywords": [
    "liquid",
    "shopify",
    "jekyll",
    "language",
    "formatting"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/panoply/vscode-liquid.git"
  },
  "bugs": {
    "url": "https://github.com/panoply/vscode-liquid/issues"
  },
  "engines": {
    "vscode": "^1.69.0"
  },
  "categories": [
    "Formatters",
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "bundledDependencies": true,
  "activationEvents": [
    "onLanguage:html",
    "onCommand:liquid.liquidrc"
  ],
  "main": "./extension/extension",
  "contributes": {
    "jsonValidation": [
      {
        "fileMatch": [
          ".liquidrc",
          ".liquidrc.json"
        ],
        "url": "./liquidrc.json"
      }
    ],
    "commands": [
      {
        "command": "liquid.disableFormatting",
        "title": "Liquid: Disable Formatting"
      },
      {
        "command": "liquid.enableFormatting",
        "title": "Liquid: Enable Formatting"
      },
      {
        "command": "liquid.toggleOutput",
        "title": "Liquid: Toggle Output"
      },
      {
        "command": "liquid.formatDocument",
        "title": "Liquid: Format Document"
      },
      {
        "command": "liquid.formatSelection",
        "title": "Liquid: Format Selection"
      },
      {
        "command": "liquid.liquidrc",
        "title": "Liquid: Generate a .liquidrc rule file"
      }
    ],
    "keybindings": [
      {
        "command": "liquid.formatDocument",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l",
        "when": "editorTextFocus"
      }
    ],
    "languages": [
      {
        "id": "liquid",
        "configuration": "./src/language/liquid.configuration.json",
        "aliases": [
          "Liquid"
        ]
      },
      {
        "id": "html",
        "extensions": [
          ".liquid",
          ".jekyll",
          ".jkyl"
        ]
      },
      {
        "id": "javascript",
        "extensions": [
          ".js.liquid",
          ".ts.liquid"
        ]
      },
      {
        "id": "css",
        "extensions": [
          ".css.liquid"
        ]
      },
      {
        "id": "scss",
        "extensions": [
          ".scss.liquid",
          ".sass.liquid"
        ]
      },
      {
        "id": "json",
        "filenames": [
          ".liquid",
          ".liquidrc",
          ".liquidrc.json"
        ]
      }
    ],
    "grammars": [
      {
        "language": "liquid",
        "scopeName": "source.liquid",
        "path": "./src/syntax/liquid.tmLanguage.json",
        "injectTo": [
          "text.html"
        ]
      }
    ],
    "snippets": [
      {
        "language": "html",
        "path": "./src/snippets/snippets.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Liquid Language configuration",
      "properties": {
        "liquid.format": {
          "type": "boolean",
          "default": true,
          "description": "Whether to enable/disable Liquid formatting."
        },
        "liquid.rules": {
          "type": "object",
          "description": "Format code style ruleset settings.",
          "$ref": "#/definitions/markup"
        }
      }
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup --minify-identifiers --minify-whitespace"
  },
  "tsup": {
    "entry": {
      "extension": "./src/extension.ts"
    },
    "outDir": "./extension",
    "noExternal": ["@liquify/prettify"],
    "external": [
      "vscode"
    ],
    "treeshake": false,
    "splitting": false,
    "format": "cjs"
  },
  "prettier": "@liquify/eslint-config",
  "eslintConfig": {
    "extends": "@liquify/eslint-config"
  },
  "devDependencies": {
    "@liquify/eslint-config": "^1.1.0",
    "@liquify/prettier-config": "^1.1.0",
    "@types/node": "^18.6.2",
    "@types/vscode": "^1.69.0",
    "eslint": "^8.20.0",
    "prettier": "^2.7.1",
    "tsup": "^6.2.0",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "@liquify/prettify": "0.0.1-beta.1"
  }
}
