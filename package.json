{
  "name": "shopify-liquid",
  "displayName": "Liquid",
  "description": "Syntax highlighting, formatting and snippet support for the liquid template language. Supports both Jekyll and Shopify variations.",
  "publisher": "sissel",
  "icon": "images/logo.png",
  "author": "Nikolas Savvidis <nicos@gmx.com>",
  "version": "1.6.4",
  "keywords": [
    "liquid",
    "shopify",
    "jekyll",
    "language",
    "formatting"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/panoply/vscode-liquid.git"
  },
  "bugs": {
    "url": "https://github.com/panoply/vscode-liquid/issues"
  },
  "engines": {
    "vscode": "^1.30.0"
  },
  "categories": [
    "Formatters",
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:html"
  ],
  "main": "./extension/index",
  "contributes": {
    "commands": [
      {
        "command": "liquid.disableFormatting",
        "title": "Liquid: Disable Formatting"
      },
      {
        "command": "liquid.enableFormatting",
        "title": "Liquid: Enable Formatting"
      },
      {
        "command": "liquid.formatDocument",
        "title": "Liquid: Format Document"
      },
      {
        "command": "liquid.formatSelection",
        "title": "Liquid: Format Selection"
      }
    ],
    "keybindings": [
      {
        "command": "liquid.formatDocument",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l",
        "when": "editorTextFocus"
      }
    ],
    "languages": [
      {
        "id": "html",
        "aliases": [
          "HTML"
        ],
        "extensions": [
          ".liquid",
          ".jekyll"
        ],
        "configuration": "./src/language/liquid.configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "html",
        "scopeName": "source.liquid",
        "path": "./src/syntax/liquid.tmLanguage.json",
        "embeddedLanguages": {
          "source.yaml": "yaml",
          "source.json": "json",
          "source.css": "css",
          "source.css.scss": "scss",
          "source.js": "javascript",
          "source.ts": "typescript"
        }
      }
    ],
    "snippets": [
      {
        "language": "html",
        "path": "./src/snippets/snippets.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Liquid Language configuration",
      "properties": {
        "liquid.format": {
          "type": "boolean",
          "default": true,
          "description": "Whether to enable/disable Liquid formatting."
        },
        "liquid.formatIgnore": {
          "type": "array",
          "default": [
            "case"
          ],
          "description": "Add tag blocks that should be ignored when formatting."
        },
        "liquid.beautify": {
          "type": "object",
          "description": "Format settings for Liquid HTML and Shopify section Stylesheet, JavaScript and Schema tags.",
          "default": {
            "html": {
              "force_attribute": false,
              "preserve": 2
            },
            "javascript": {
              "preserve": 1,
              "method_chain": 0,
              "quote_convert": "none",
              "format_array": "indent",
              "format_object": "indent"
            },
            "stylesheet": {
              "css_insert_lines": true,
              "preserve": 2
            },
            "schema": {
              "format_array": "indent"
            }
          }
        }
      }
    }
  },
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.13.7",
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-html": "^5.0.3",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "prettier": "^1.17.0",
    "prettier-eslint": "^8.8.2",
    "rollup": "^1.10.1",
    "rollup-plugin-babel": "^4.3.2",
    "vscode": "^1.1.33"
  },
  "dependencies": {
    "path": "^0.12.7",
    "prettydiff": "^101.0.0"
  }
}
