{
  "name": "shopify-liquid",
  "displayName": "Shopify Liquid",
  "description": "Language support and syntax highlighting for the shopify liquid template language. Supports section tags like schema, javascript, stylesheet and more.",
  "publisher": "sissel",
  "icon": "images/logo.png",
  "author": "Nikolas Savvidis <nicos@gmx.com>",
  "version": "0.5.0",
  "keywords": [
    "liquid",
    "shopify",
    "language"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/panoply/vscode-shopify-liquid.git"
  },
  "bugs": {
    "url": "https://github.com/panoply/vscode-shopify-liquid/issues"
  },
  "engines": {
    "vscode": "^1.30.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [{
      "id": "html",
      "aliases": [
        "HTML",
        "Liquid"
      ],
      "extensions": [
        ".liquid",
        ".html.liquid"
      ],
      "configuration": "./liquid.language-configuration.json"
    }],
    "grammars": [{
      "language": "html",
      "scopeName": "text.html.liquid",
      "path": "./syntaxes/liquid.json",
      "embeddedLanguages": {
        "text.html.basic": "html",
        "source.json": "json",
        "source.css": "css",
        "source.css.scss": "scss",
        "source.js": "javascript",
        "source.ts": "typescript"
      }
    }],
    "snippets": [{
      "language": "html",
      "path": "./snippets/liquid.json"
    }]
  }
}
