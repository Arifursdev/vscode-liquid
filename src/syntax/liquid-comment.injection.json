{
  "fileTypes": [
    "js",
    "ts",
    "css",
    "scss"
  ],
  "scopeName": "comment.injection.liquid",
  "injectionSelector": "L:source.js -comment -string, L:source.js (comment.block.js), L:source.css -comment -string, L:source.css (comment.block.css), L:source.css.scss -comment -string, L:source.css.scss (comment.block.css.scss)",
  "patterns": [
    {
      "contentName": "meta.embedded.block.html",
      "name": "comment.block.liquid",
      "begin": "/\\*\\s+(liquid)\\s+\\*\/",
      "beginCaptures": {
        "1": {
          "name": "keyword.other.liquid"
        }
      },
      "end": "/\\*\\s+(endliquid)\\s+\\*\/",
      "endCaptures": {
        "1": {
          "name": "keyword.other.liquid"
        }
      },
      "patterns": [
        {
          "include": "source.liquid#template-tags"
        },
        {
          "include": "source.liquid#template-vars"
        }
      ]
    }
  ]
}
