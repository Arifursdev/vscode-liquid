{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "CSS (Liquid)",
  "scopeName": "source.css.liquid",
  "injections": {
    "L:meta.definition.variable.scss": {
      "patterns": [
        {
          "include": "source.liquid#template-vars"
        }
      ]
    }
  },
  "patterns": [
    {
      "include": "source.liquid#template-tags"
    },
    {
      "include": "source.liquid#template-vars"
    },
    {
      "include": "source.css"
    }
  ]
}
