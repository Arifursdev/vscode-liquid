{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "injectionSelector": "L:source.liquid -meta.embedded -comment, L:source.js.liquid -meta.embedded -comment, L:source.json.liquid -meta.embedded -comment, L:source.css.liquid -meta.embedded -comment, L:source.scss.liquid -meta.embedded -comment",
  "scopeName": "source.liquid.frontmatter",
  "patterns": [
    {
      "name": "meta.embedded.block.liquid",
      "contentName": "meta.embedded.block.frontmatter.liquid",
      "begin": "\\A-{3}\\s*$",
      "end": "(^|\\G)-{3}|\\.{3}\\s*$",
      "patterns": [
        {
          "include": "source.yaml"
        }
      ]
    }
  ]
}
