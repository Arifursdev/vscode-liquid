{
  "env": {
    "browser": false,
    "es6": true,
    "jest": false,
    "node": true
  },
  "extends": [
    "standard"
  ],
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "rules": {
    "class-methods-use-this": 0,
    "guard-for-in": 0,
    "allowElseIf": true,
    "allowAllPropertiesOnSameLine": false,
    "array-element-newline": [
      "error",
      "always"
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "operator-linebreak": [
      "error",
      "after",
      {
        "overrides": {
          "?": "before",
          ":": "before"
        }
      }
    ],
    "newline-per-chained-call": [
      "error",
      {
        "ignoreChainWithDepth": 5
      }
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "object-curly-newline": "off",
    "object-property-newline": 2,
    "padded-blocks": [
      1,
      {
        "classes": "always"
      },
      {
        "allowSingleLineBlocks": true
      }
    ],
    "semi": [
      "error",
      "never"
    ]
  }
}
