{
  "env": {
    "browser": false,
    "es6": true,
    "jest": false,
    "node": true
  },
  "extends": [
    "standard"
  ],
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "rules": {
    "class-methods-use-this": 0,
    "guard-for-in": 0,
    "allowElseIf": true,
    "allowAllPropertiesOnSameLine": false,
    "function-paren-newline": [
      "error",
      "consistent"
    ],
    "array-element-newline": [
      "error",
      "always"
    ],
    "array-bracket-newline": [
      "error",
      {
        "multiline": true
      }
    ],
    "array-bracket-spacing": [
      "error",
      "always"
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "operator-linebreak": [
      "error",
      "after",
      {
        "overrides": {
          "?": "before",
          ":": "before"
        }
      }
    ],
    "newline-per-chained-call": [
      "error",
      {
        "ignoreChainWithDepth": 2
      }
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "object-curly-newline": "off",
    "object-property-newline": 2,
    "padded-blocks": [
      1,
      {
        "classes": "always",
        "blocks": "always"
      },
      {
        "allowSingleLineBlocks": true
      }
    ],
    "semi": [
      "error",
      "never"
    ],
    "padding-line-between-statements": [
      "error",
      {
        "blankLine": "any",
        "prev": "cjs-export",
        "next": "*"
      }
    ]
  }
}
